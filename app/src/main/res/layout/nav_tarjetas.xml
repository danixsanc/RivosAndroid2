<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/lnl_no_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_no_data_detected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#87000000"
                android:textSize="16dp"
                android:layout_marginTop="150dp"
                android:gravity="center"
                android:text="No hay tarjetas registradas"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:tint="#bfbfbf"
                android:src="@drawable/ic_sentiment_dissatisfied_black_48dp"
                />
        </LinearLayout>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/list_pending_history"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />

        <FrameLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_add_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:src="@drawable/ic_add_white_24dp"
                app:borderWidth="0dp"
                app:elevation="6dp"
                android:layout_marginBottom="@dimen/fab_margin"
                app:backgroundTint="@color/textColorPrimary"
                android:layout_marginRight="@dimen/fab_margin"/>

        </FrameLayout>
    </RelativeLayout>



</LinearLayout>