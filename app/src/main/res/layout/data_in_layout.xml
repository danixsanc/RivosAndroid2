<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Modificar Datos"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:textSize="20dp"
            android:id="@+id/txt_modificar_datos"
            android:layout_gravity="center_horizontal" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:textSize="16dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/registerName"
            android:inputType="textPersonName"
            app:met_floatingLabel="normal"
            app:met_minCharacters="3"
            app:met_maxCharacters="30"
            app:met_clearButton="true"
            app:met_textColorHint="#8C96FF"
            app:met_baseColor="#2f3794"
            app:met_primaryColor="#8C96FF"
            app:met_errorColor="#8C96FF"
            app:met_textColor="#8C96FF"
            app:met_underlineColor="#8C96FF"
            app:met_helperTextColor="#8C96FF"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefono"
            android:textSize="16dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/colorPrimary"
            android:id="@+id/registerPhone"
            android:inputType="phone"
            app:met_floatingLabel="highlight"
            app:met_minCharacters="10"
            app:met_maxCharacters="10"
            app:met_clearButton="true"
            app:met_textColorHint="#8C96FF"
            app:met_baseColor="#2f3794"
            app:met_primaryColor="#8C96FF"
            app:met_errorColor="#8C96FF"
            app:met_textColor="#8C96FF"
            app:met_underlineColor="#8C96FF"
            app:met_helperTextColor="#8C96FF"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo"
            android:textSize="16dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/registerEmail"
            android:inputType="textEmailAddress"
            app:met_floatingLabel="highlight"
            app:met_minCharacters="3"
            app:met_maxCharacters="100"
            app:met_clearButton="true"
            app:met_textColorHint="#8C96FF"
            app:met_baseColor="#2f3794"
            app:met_primaryColor="#8C96FF"
            app:met_errorColor="#8C96FF"
            app:met_textColor="#8C96FF"
            app:met_underlineColor="#8C96FF"
            app:met_helperTextColor="#8C96FF"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:textSize="16dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/registerPassword"
            android:inputType="textPassword"
            app:met_floatingLabel="highlight"
            app:met_minCharacters="6"
            app:met_maxCharacters="15"
            app:met_clearButton="true"
            app:met_textColorHint="#8C96FF"
            app:met_baseColor="#2f3794"
            app:met_primaryColor="#8C96FF"
            app:met_errorColor="#8C96FF"
            app:met_textColor="#8C96FF"
            app:met_underlineColor="#8C96FF"
            app:met_helperTextColor="#8C96FF"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Repetir Contraseña"
            android:textSize="16dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/registerPasswordRepeat"
            android:inputType="textPassword"
            app:met_floatingLabel="highlight"
            app:met_minCharacters="6"
            app:met_helperText=""
            app:met_maxCharacters="15"
            app:met_clearButton="true"
            app:met_textColorHint="#8C96FF"
            app:met_baseColor="#2f3794"
            app:met_primaryColor="#8C96FF"
            app:met_errorColor="#8C96FF"
            app:met_textColor="#8C96FF"
            app:met_underlineColor="#8C96FF"
            app:met_helperTextColor="#8C96FF"/>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp">
            <TableRow>
                <CheckBox
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textColor="#2f3794"
                    android:textSize="14dp"
                    android:text="Terminos y condiciones"
                    android:id="@+id/check_terminos" />
                <Button
                    android:id="@+id/btn_lee_terminos"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textColor="#2f3794"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:textAllCaps="false"
                    android:layout_gravity="right"
                    android:text="Leer" />
            </TableRow>
        </TableLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:textColor="#ffffff"
        android:background="#2f3794"
        android:layout_marginTop="20dp"
        android:typeface="monospace"
        android:text="GUARDAR" />

</LinearLayout>
    </ScrollView>